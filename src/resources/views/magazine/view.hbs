<div class="container mt-4">
    <h1 class="text-center mb-4">Manage Magazines</h1>
    <div class="row mt-4">
        <div class="col-md-6 offset-md-3">
            <!-- Form for adding/editing magazines -->
            <div class="card">
                <div class="card-body" id="magazineForm" style="display: none;">
                    <form id="magazineForm" action="/manager/magazine/create" method="POST">
                        <h3 class="mb-3 text-center">Add Magazine</h3>
                        <div class="form-group">
                            <label for="title">Title:</label>
                            <input type="text" class="form-control" id="title" name="title" maxlength="255" required>
                        </div>

                        <div class="form-group">
                            <label for="academicYear">Academic Year:</label>
                            <select class="form-control" id="academicYear" name="academicYear" required>
                                {{#each academicYears}}
                                <option value="{{this._id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="form-group">
                            <label for="faculty">Faculty:</label>
                            <select class="form-control" id="faculty" name="faculty" required>
                                {{#each faculties}}
                                <option value="{{this._id}}">{{this.name}}</option>
                                {{/each}}
                            </select>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary">Create Magazine</button>
                        </div>
                    </form>
                </div>
                <div class="card-body text-center">
                    <button onclick="toggleAddMagazineForm()" class="btn btn-primary">Show/Hide Add Magazine Form</button>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col-md-12">
            <!-- Table for viewing all magazines -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Title</th>
                            <th>Academic Year</th>
                            <th>Faculty</th>
                            <th>Total Submissions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each magazines}}
                        <tr>
                            <td>{{title}}</td>
                            <td>{{academicYear.name}}</td>
                            <td>{{faculty.name}}</td>
                            <td>{{totalSubmissions}} <a href="./confirm-download/{{this._id}}"
                                    class="btn btn-sm btn-primary mr-2"> Download All</a></td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- Pagination -->
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            {{#if (gt totalPages 1)}}
            {{#if (gt currentPage 1)}}
            <li class="page-item"><a class="page-link" href="?page=1">First</a></li>
            <li class="page-item"><a class="page-link" href="?page={{sub currentPage 1}}">Previous</a></li>
            {{/if}}
            {{#each pages}}
            <li class="page-item {{#if (eq this ../currentPage)}}active{{/if}}"><a class="page-link"
                    href="?page={{this}}">{{this}}</a></li>
            {{/each}}
            {{#if (lt currentPage totalPages)}}
            <li class="page-item"><a class="page-link" href="?page={{add currentPage 1}}">Next</a></li>
            <li class="page-item"><a class="page-link" href="?page={{totalPages}}">Last</a></li>
            {{/if}}
            {{/if}}
        </ul>
    </nav>
    <script>
        function toggleAddMagazineForm() {
            var form = document.getElementById("magazineForm");
            if (form.style.display === "none") {
                form.style.display = "block";
            } else {
                form.style.display = "none";
            }
        }
    </script>