<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card rounded-3 border-0">
        <div class="card-header bg-primary text-white rounded-top">
          <h2 class="mb-0">Edit Academic Year</h2>
        </div>
        <div class="card-body bg-light rounded-bottom">
          <form action="../{{academicYear._id}}/update" method="POST">
            <div class="form-group mb-3">
              <label for="name">Name:</label>
              <input
                type="text"
                class="form-control rounded-pill"
                id="name"
                name="name"
                maxlength="255"
                placeholder="Enter name"
                value="{{academicYear.name}}"
              />
            </div>

            <div class="form-group mb-3">
              <label for="startDate">Start Date:</label>
              <input
                type="date"
                class="form-control rounded-pill"
                id="startDate"
                name="startDate"
                required
                placeholder="Select start date"
                value="{{formatDateForEdit academicYear.startDate}}"
              />
            </div>

            <div class="form-group mb-3">
              <label for="closureDate">Closure Date:</label>
              <input
                type="date"
                class="form-control rounded-pill"
                id="closureDate"
                name="closureDate"
                required
                placeholder="Select closure date"
                value="{{formatDateForEdit academicYear.closureDate}}"
              />
            </div>

            <div class="form-group mb-4">
              <label for="finalClosureDate">Final Closure Date:</label>
              <input
                type="date"
                class="form-control rounded-pill"
                id="finalClosureDate"
                name="finalClosureDate"
                required
                placeholder="Select final closure date"
                value="{{formatDateForEdit academicYear.finalClosureDate}}"
              />
            </div>

            <button
              type="submit"
              class="btn btn-primary rounded-pill btn-block btn-lg"
            >Update Academic Year</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .card { background-color: rgba(255, 255, 255, 0.8); backdrop-filter:
  blur(10px); border-radius: 20px; box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.1);
  } .btn-primary { background-color: #007bff; border-color: #007bff; transition:
  all 0.3s ease-in-out; } .btn-primary:hover { background-color: #0056b3;
  border-color: #0056b3; } .btn-primary:focus { box-shadow: 0 0 0 0.2rem rgba(0,
  123, 255, 0.5); }
</style>