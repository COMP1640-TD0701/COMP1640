<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">Edit Academic Year</h2>
                </div>
                <div class="card-body">
                    <form action="../{{academicYear._id}}/update" method="POST">
                        <div class="form-group">
                            <label for="name">Name:</label>
                            <input type="text" class="form-control" id="name" name="name" maxlength="255"
                                value="{{academicYear.name}}">
                        </div>

                        <div class="form-group">
                            <label for="startDate">Start Date:</label>
                            <input type="date" class="form-control" id="startDate" name="startDate" required
                                value="{{formatDateForEdit academicYear.startDate}}">
                        </div>

                        <div class="form-group">
                            <label for="closureDate">Closure Date:</label>
                            <input type="date" class="form-control" id="closureDate" name="closureDate" required
                                value="{{formatDateForEdit academicYear.closureDate}}">
                        </div>

                        <div class="form-group">
                            <label for="finalClosureDate">Final Closure Date:</label>
                            <input type="date" class="form-control" id="finalClosureDate" name="finalClosureDate" required
                                value="{{formatDateForEdit academicYear.finalClosureDate}}">
                        </div>

                        <button type="submit" class="btn btn-primary">Update Academic Year</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
