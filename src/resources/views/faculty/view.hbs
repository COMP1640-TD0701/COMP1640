
<div class="container mt-4">
    <h1 class="text-center mb-4">Manage Faculty</h1>
    <div class="row">
        <div class="col-md-12">
            <!-- Table for viewing all academic years -->
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead class="thead-dark">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each faculties}}
                        <tr>
                            <td>{{this.name}}</td>
                            <td>{{this.description}}</td>
                            <td>
                                <a href="./{{this._id}}/edit" class="btn btn-sm btn-primary mr-2">Edit</a>
                                <form action="./{{this._id}}/delete" method="POST" style="display: inline;">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-12">
            <!-- Form for adding faculty -->
            <div class="form-container">
                <form id="facultyForm" action="/admin/faculty/create" method="POST">
                    <h3 class="mb-3">Add Faculty</h3>
                    <div class="form-group">
                        <label for="name">Name:</label>
                        <input type="text" class="form-control" id="name" name="name" maxlength="255" required>
                    </div>
    
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea class="form-control" id="description" name="description" rows="2" required></textarea>
                    </div>
    
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Add</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

