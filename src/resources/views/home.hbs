                <div class="card" style="width: 18rem;">
                    <img src="{{viewImageLink}}" class="card-img-top" alt="..."
                        style="height: 200px; object-fit: cover;">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">Submitted by: {{student.fullName}}</p>
                        <p class="card-text">Submitted to Magazine: {{../title}}</p>
                        <a href="{{viewDocLink}}" class="btn btn-primary">Download Document</a>
                    </div>
                </div>
            </div>
            {{/ifEquals}}
            {{/each}}
  
    {{/ifEquals}}
