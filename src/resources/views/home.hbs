          <img src="https://mdbcdn.b-cdn.net/img/new/avatars/1.webp" alt="John Doe" class="rounded-circle shadow-4-strong mr-3">
          <div class="card-body">
            <p>"As a busy professional, DuckDuy LMS has been a lifesaver. The flexible scheduling and mobile access allow me to learn at my own pace, even on the go. I've already seen a significant improvement in my work performance." - John Doe, Manager</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

    </div>
    </div>
    <h2 class="text-4xl font-bold text-center text-zinc-800 dark:text-white py-8">Course</h2>
   {{#each faculties}}
    <h2>{{this.name}}</h2>
    {{#each magazines}}
        <pre>{{json this}}</pre>
        <h2>{{title}}</h2>
        {{#ifEquals this.faculty ../faculty}} 
            <h3>{{title}}</h3>
            <ul>
                {{#each submissions}} 
                    {{#ifEquals this.magazine ../magazine}} 
                        <li>
                            <h4>{{title}}</h4>
                            <p>Submitted by: {{student.name}}</p>
                            <p>Date Submitted: {{dateSubmitted}}</p>
                            <p>Status: {{status}}</p>
                            <p>Comment: {{comment}}</p>
                            <!-- Add other submission details here -->
                            <!-- Example of using imagePath if available -->
                            {{#if imagePath}}
                                <img src="{{imagePath}}" alt="Submission Image">
                            {{/if}}
                            <!-- Example of using documentPath if available -->
                            {{#if documentPath}}
                                <a href="{{documentPath}}" target="_blank">View Document</a>
                            {{/if}}
                        </li>
                    {{/ifEquals}}
                {{/each}}
            </ul>
        {{/ifEquals}}
    {{/each}}
{{/each}}


